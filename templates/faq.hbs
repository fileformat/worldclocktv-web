<script>
    $( document ).ready(function() {
        $("#wh").text($(window).height());
        $("#ww").text($(window).width());
        $("#sh").text(screen.height);
        $("#sw").text(screen.width);
        $("#viewport").text($("meta[name=viewport]").attr("content"));
    });
</script>
